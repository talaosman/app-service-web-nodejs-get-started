extends layout

block content
  style.
    section.hero {
      text-align:center;
      padding:60px;
      background:#1d3557;
      color:white;
    }
    section.features {
      display:flex;
      justify-content:space-around;
      gap:1.5rem;
      padding:3rem;
      max-width:1000px;
      margin:2rem auto;
    }
    .feature {
      background:white;
      padding:1.5rem;
      border-radius:12px;
      text-align:center;
      width:30%;
      box-shadow:0 4px 10px rgba(0,0,0,0.1);
    }
    .feature i { color:#1d3557; margin-bottom:1rem; }
    section.mission {
      max-width:800px;
      margin:2rem auto;
      background:white;
      padding:2rem;
      border-radius:12px;
      box-shadow:0 4px 10px rgba(0,0,0,0.1);
    }
    @media(max-width:768px){
      section.features { flex-direction:column; }
      .feature { width:100%; }
    }

